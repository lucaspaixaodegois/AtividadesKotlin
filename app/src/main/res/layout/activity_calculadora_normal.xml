<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".CalculadoraNormalActivity"
              android:orientation="vertical">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight=".8">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/lbl_expressao" android:layout_weight=".6"
                android:gravity=""
                android:padding="8dp" android:layout_marginTop="10dp"/>
        <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/lbl_resultado" android:layout_weight=".4"
                android:gravity="center"
                android:padding="8dp" android:textStyle="bold" android:textColor="@android:color/background_dark"
                android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight=".2">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight=".2">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="CE"
                        android:layout_width="match_parent"
                        android:backgroundTint="#eee"
                        android:layout_height="match_parent" android:id="@+id/btnce" android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="C"
                        android:layout_width="match_parent"
                        android:backgroundTint="#eee"
                        android:layout_height="match_parent" android:id="@+id/btnc" android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text=""
                        android:layout_width="match_parent"
                        android:backgroundTint="#eee"
                        android:layout_height="match_parent" android:id="@+id/btnback" android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="/"
                        android:layout_width="match_parent"
                        android:backgroundTint="#eee"
                        android:layout_height="match_parent" android:id="@+id/btndiv" android:textSize="24sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight=".2">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="7"
                        android:layout_width="match_parent"
                        android:backgroundTint="#ddd"
                        android:layout_height="match_parent" android:id="@+id/btn7" android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="8"
                        android:layout_width="match_parent"
                        android:backgroundTint="#ddd"
                        android:layout_height="match_parent" android:id="@+id/btn8" android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="9"
                        android:layout_width="match_parent"
                        android:backgroundTint="#ddd"
                        android:layout_height="match_parent" android:id="@+id/btn9" android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="*"
                        android:layout_width="match_parent"
                        android:backgroundTint="#eee"
                        android:layout_height="match_parent" android:id="@+id/btnmulti" android:textSize="24sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight=".2">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="4"
                        android:layout_width="match_parent"
                        android:backgroundTint="#ddd"
                        android:layout_height="match_parent" android:id="@+id/btn4" android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="5"
                        android:layout_width="match_parent"
                        android:backgroundTint="#ddd"
                        android:layout_height="match_parent" android:id="@+id/btn5" android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="6"
                        android:layout_width="match_parent"
                        android:backgroundTint="#ddd"
                        android:layout_height="match_parent" android:id="@+id/btn6" android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="-"
                        android:layout_width="match_parent"
                        android:backgroundTint="#eee"
                        android:layout_height="match_parent" android:id="@+id/btnfewer" android:textSize="24sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight=".2">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="1"
                        android:layout_width="match_parent"
                        android:backgroundTint="#ddd"
                        android:layout_height="match_parent" android:id="@+id/btn1" android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="2"
                        android:layout_width="match_parent"
                        android:backgroundTint="#ddd"
                        android:layout_height="match_parent" android:id="@+id/btn2" android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="3"
                        android:layout_width="match_parent"
                        android:backgroundTint="#ddd"
                        android:layout_height="match_parent" android:id="@+id/btn3" android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="+"
                        android:layout_width="match_parent"
                        android:backgroundTint="#eee"
                        android:layout_height="match_parent" android:id="@+id/btnplus" android:textSize="24sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight=".2">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="+-"
                        android:layout_width="match_parent"
                        android:backgroundTint="#eee"
                        android:layout_height="match_parent" android:id="@+id/btnpositivenegative"
                        android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="0"
                        android:layout_width="match_parent"
                        android:backgroundTint="#ddd"
                        android:layout_height="match_parent" android:id="@+id/btn0" android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text=","
                        android:layout_width="match_parent"
                        android:backgroundTint="#eee"
                        android:layout_height="match_parent" android:id="@+id/btndot" android:textSize="24sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight=".25">
                <Button
                        android:text="="
                        android:layout_width="match_parent"
                        android:backgroundTint="#eee"
                        android:layout_height="match_parent" android:id="@+id/btnequal" android:textSize="24sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>