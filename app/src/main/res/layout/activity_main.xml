<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
>


    <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu de Atividades "
            android:textAlignment="center"
            android:textSize="25dp"
            android:padding="14dp"
            android:textColor="#206624"
    />
    <Button
            android:textColor="#f0f0f0"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnAtividadeLogin"
            android:text="Tela de Login"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/buttonshape_menu_atividades"
    />
    <Button
            android:textColor="#f0f0f0"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnAtividadeIMC"
            android:text="Atividade_CalculadoraIMC"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/buttonshape_menu_atividades"

    />
    <Button
            android:textColor="#f0f0f0"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnAtividadeCalculadoraNormal"
            android:text="Atividade_Calculadora Normal"
            android:background="@drawable/buttonshape_menu_atividades"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
    />
    <Button
            android:textColor="#f0f0f0"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnAtividadeJogoDaVelha"
            android:text="Atividade_Jogo da Velha"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/buttonshape_menu_atividades"

    />


</LinearLayout>